<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRegisterTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crear cuenta"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/textWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtRegEmail"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:textColor="@color/textWhite"
        android:textColorHint="@color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tvRegisterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtRegPass"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="@color/textWhite"
        android:textColorHint="@color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/edtRegEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edtRegPass2"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        android:hint="Confirmar contraseña"
        android:inputType="textPassword"
        android:textColor="@color/textWhite"
        android:textColorHint="@color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/edtRegPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCrearCuenta"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Crear cuenta"
        android:textColor="@color/textWhite"
        android:backgroundTint="@color/primaryBlue"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/edtRegPass2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnVolverLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Ya tengo cuenta, volver"
        android:textAllCaps="false"
        android:textColor="@color/textWhite"
        android:backgroundTint="@android:color/black"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnCrearCuenta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
