<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Top profile section with icons -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Bienvenida de nuevo,"
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toTopOf="@id/profile_image" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:text="Maria"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/welcome_text" />

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_notification"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Blue dot on notification -->
    <View
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="#1E88E5"
        android:layout_marginEnd="-3dp"
        android:layout_marginTop="-3dp"
        app:layout_constraintEnd_toEndOf="@id/notification_icon"
        app:layout_constraintTop_toTopOf="@id/notification_icon" />

    <!-- SOS glow: Larger semi-transparent red circle -->
    <View
        android:id="@+id/sos_glow_outer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_glow_outer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:layout_marginTop="32dp" />

    <View
        android:id="@+id/sos_glow_inner"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/circle_glow_inner"
        app:layout_constraintBottom_toBottomOf="@id/sos_glow_outer"
        app:layout_constraintEnd_toEndOf="@id/sos_glow_outer"
        app:layout_constraintStart_toStartOf="@id/sos_glow_outer"
        app:layout_constraintTop_toTopOf="@id/sos_glow_outer" />

    <!-- SOS button -->
    <TextView
        android:id="@+id/sos_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_red"
        android:gravity="center"
        android:text="SOS"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/sos_glow_inner"
        app:layout_constraintEnd_toEndOf="@id/sos_glow_inner"
        app:layout_constraintStart_toStartOf="@id/sos_glow_inner"
        app:layout_constraintTop_toTopOf="@id/sos_glow_inner" />

    <!-- Incidents title -->
    <TextView
        android:id="@+id/incidents_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:text="Resumen de Incidentes"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sos_glow_outer" />

    <TextView
        android:id="@+id/view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Ver Todos"
        android:textColor="#1E88E5"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/incidents_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/incidents_title" />

    <!-- Incidents list -->
    <LinearLayout
        android:id="@+id/incidents_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/incidents_title">

        <!-- Incident 1: Accidente de Tráfico -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/incident1_icon_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#D32F2F"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <ImageView
                        android:id="@+id/incident1_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_car_crash" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/incident1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Accidente de Tráfico"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/incident1_icon_bg"
                    app:layout_constraintTop_toTopOf="@id/incident1_icon_bg" />

                <TextView
                    android:id="@+id/incident1_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Oak St &amp; Main Ave"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/incident1_icon_bg"
                    app:layout_constraintTop_toBottomOf="@id/incident1_title" />

                <TextView
                    android:id="@+id/incident1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hace 1h"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/incident1_title" />

                <TextView
                    android:id="@+id/incident1_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ALTA"
                    android:textColor="#D32F2F"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/incident1_time" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Incident 2: Actividad Sospechosa -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/incident2_icon_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#FFB300"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <ImageView
                        android:id="@+id/incident2_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_search"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/incident2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Actividad Sospechosa"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/incident2_icon_bg"
                    app:layout_constraintTop_toTopOf="@id/incident2_icon_bg" />

                <TextView
                    android:id="@+id/incident2_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Central Park"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/incident2_icon_bg"
                    app:layout_constraintTop_toBottomOf="@id/incident2_title" />

                <TextView
                    android:id="@+id/incident2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hace 3h"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/incident2_title" />

                <TextView
                    android:id="@+id/incident2_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="MEDIA"
                    android:textColor="#FFB300"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/incident2_time" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Incident 3: Mascota Perdida -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardBackgroundColor="#212121"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/incident3_icon_bg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardBackgroundColor="#00B8D4"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <ImageView
                        android:id="@+id/incident3_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_pet"
                        />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/incident3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Mascota Perdida"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/incident3_icon_bg"
                    app:layout_constraintTop_toTopOf="@id/incident3_icon_bg" />

                <TextView
                    android:id="@+id/incident3_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Cerca de Rosewood Ave"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/incident3_icon_bg"
                    app:layout_constraintTop_toBottomOf="@id/incident3_title" />

                <TextView
                    android:id="@+id/incident3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hace 5h"
                    android:textColor="#9E9E9E"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/incident3_title" />

                <TextView
                    android:id="@+id/incident3_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="BAJA"
                    android:textColor="#00B8D4"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/incident3_time" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Bottom navigation with white outline -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bottom_nav_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="673dp"
        app:itemIconTint="#FFFFFF"
        app:itemRippleColor="#33FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>